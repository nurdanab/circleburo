# Поддержка .br (Brotli) файлов
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Проверяем поддержку Brotli
  RewriteCond %{HTTP:Accept-Encoding} br
  RewriteCond %{REQUEST_FILENAME}\.br -f
  RewriteRule ^(.*)$ $1.br [L]

  # Проверяем поддержку Gzip
  RewriteCond %{HTTP:Accept-Encoding} gzip
  RewriteCond %{REQUEST_FILENAME}\.gz -f
  RewriteRule ^(.*)$ $1.gz [L]
</IfModule>

# MIME типы для сжатых файлов
<IfModule mod_mime.c>
  # Brotli
  AddEncoding br .br
  AddType text/javascript .js.br
  AddType text/css .css.br

  # Gzip
  AddEncoding gzip .gz
  AddType text/javascript .js.gz
  AddType text/css .css.gz

  # WebP
  AddType image/webp .webp

  # WebM
  AddType video/webm .webm

  # WOFF2
  AddType font/woff2 .woff2
</IfModule>

# Настройки для SPA (Single Page Application)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Если это не файл и не директория
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Редирект на index.html
  RewriteRule . /index.html [L]
</IfModule>
