# Security Headers for Netlify
/*
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://vitals.vercel-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://vitals.vercel-analytics.com https://fonts.gstatic.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';
  
  # XSS Protection
  X-XSS-Protection: 1; mode=block
  
  # Content Type Options
  X-Content-Type-Options: nosniff
  
  # Frame Options (Clickjacking Protection)
  X-Frame-Options: DENY
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()
  
  # HSTS (HTTP Strict Transport Security)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Cache headers for static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for images
/img/*
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for videos  
/videos/*
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for fonts
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Shorter cache for main HTML
/
  Cache-Control: public, max-age=0, must-revalidate

# No cache for admin routes
/admin/*
  Cache-Control: no-store, no-cache, must-revalidate
  X-Robots-Tag: noindex, nofollow